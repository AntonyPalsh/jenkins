pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage('build') {
            steps {
                echo '===================== starts bulding image ========================= '
                sh 'docker build -t py-test .'                
            }        
        }

        stage('deploy') {
            steps {
                sh 'docker run -t -i py-test sh'               
            }        
        }
    }
}